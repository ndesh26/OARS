<%= stylesheet_link_tag "table_design.css" %>
<%= stylesheet_link_tag "navigation_bar.css" %>
<ul>
        <li class="left"><a href="../../">Home</a></li>
        <li class="left active"><%= link_to "Transcript", user_course_completeds_path(current_user) %></li>
        <li class="left"><%= link_to "Course Request", request_course_user_path(current_user) %></li>
        <li class="left"><%= link_to 'Log Out', logout_path, method: "delete" %></li>
        <li class="right"><a><%= current_user.name %></a></li>
</ul>
<p id="notice"><%= notice %></p>

<h1>Courses Completed</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Credit</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_completeds.each do |course_completed| %>
      <tr>
        <td><%= course_completed.name %></td>
        <td><%= course_completed.code %></td>
        <td><%= course_completed.credit %></td>
        <td><%= course_completed.grade %></td>
        <td><%= link_to 'Show', [course_completed.user, course_completed] %></td>
        <td><%= link_to 'Edit', edit_user_course_completed_path(course_completed.user, course_completed) %></td>
        <td><%= link_to 'Destroy', [course_completed.user, course_completed], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

