<%= stylesheet_link_tag "table_design.css" %>

<ul>
     <li class="left"><a href="">Home</a></li>
     <li class="left"><%= link_to 'Edit Personal Details', edit_instructor_path(@instructor) %></li>
     <li class="left"><a href="../../courses">Course List</a></li>
     <li class="left"><%= link_to "Course Requests", accept_requests_course_path(current_user) %></li>
     <li class="left"><%= link_to 'Log Out', logout_path, method: "delete" %></li>
     <li class="right"><a><%= current_user.name %></a></li>
</ul>

<p id="notice"><%= notice %></p>
<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Dept</th>
      <th>Code</th>
      <th>Title</th>
      <th>Instructor</th>
      <th>Email</th>
      <th>Credit</th>
      <th>Timing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.dept %></td>
        <td><%= course.code %></td>
        <td><%= course.title %></td>
        <td><%= course.instructor %></td>
        <td><%= course.email %></td>
        <td><%= course.credit %></td>
        <td><%= course.timing %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
